package se.publicclass.utils {	import flash.display.DisplayObject;	import flash.display.Stage;		/**	 * @author Robert Sk√∂ld, robert(at)publicclass.se	 */	public class LayoutUtil {				public static function centerTo( target : DisplayObject , to : DisplayObject ) : void {			var toW : Number = ( to is Stage ) ? Stage( to ).stageWidth : to.width;			var toH : Number = ( to is Stage ) ? Stage( to ).stageHeight : to.height;			target.x = ( toW * .5 ) - ( target.width * .5 );			target.y = ( toH * .5 ) - ( target.height * .5 );		}				public static function centerHorizontallyTo( target : DisplayObject , to : DisplayObject ) : void {			var toW : Number = ( to is Stage ) ? Stage( to ).stageWidth : to.width;			target.x = ( toW * .5 ) - ( target.width * .5 );		}				public static function centerVerticallyTo( target : DisplayObject , to : DisplayObject ) : void {			var toH : Number = ( to is Stage ) ? Stage( to ).stageHeight : to.height;			target.y = ( toH * .5 ) - ( target.height * .5 );		}			}}
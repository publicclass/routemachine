package se.publicclass.utils {	/**	 * Handles states, using bitwise operations. Can keep multiple states at once.	 * 	 * @author Robert SkÃ¶ld, robert(at)publicclass.	 */	public class State {		private var _state : int;				public function State() {			reset();		}				public function reset() : void {			_state = 0;		}				public function add( bits : int ) : void {		    _state |= bits;		}				public function remove( bits : int ) : void {			if( has(bits ) ) _state ^= bits;		}				public function has( state : int ) : Boolean {		    return ( _state & state ) > 0;		} 			}}